<%= stylesheet_link_tag 'map', media: 'all', 'data-turbolinks-track' => true %>


<div class="container-fluid">

  <nav class="navbar navbar-default navbar-fixed-top mynav">
    <div class="container">
      <ul>
      <div class="floatleft"><li id="nohover"><a href="/"><img src="assets/header_icon.png"></a></li></div>
      <div class="floatright"><li>Logged in as <i><%= @found_user.username %></i></li>
      <li>Favorites</li>
      <li><%= link_to "Sign Out", logout_path, method: :delete %></li></div>
      </ul>
    </div>
  </nav>



  <%= form_tag search_path, method: "get", id:"search-input", class:"controls" do %>
    <%= label_tag(:city, "City: ") %>
    <%= text_field_tag(:city) %>
    <%= label_tag(:state, "State: ") %>
    <%= text_field_tag(:state) %>
    <%= label_tag(:neighborhood, "Neighborhood: ") %>
    <%= text_field_tag(:neighborhood) %>
    <%= submit_tag("Search") %>
  <% end %>

  <div id="map-canvas"></div>

  <div id="city-summary"></div>

  <div id="people"></div>

  <div id="characteristics"></div>

  <div id="ages"></div>

  <div id="kids"></div>

  <div id="relationships"></div>

  <div id="charts"></div>

</div>