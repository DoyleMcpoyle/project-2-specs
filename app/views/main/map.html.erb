 <!DOCTYPE html>
 <html lang="en">
 <head>
   <meta charset="UTF-8">
   <title>Document</title>
 </head>
 <body>
   

<%= stylesheet_link_tag 'map', media: 'all', 'data-turbolinks-track' => true %>

  <nav class="navbar navbar-default navbar-fixed-top mynav">
    <div class="container">
      <ul>
      <div class="floatleft"><li id="nohover"><a href="/"><%= image_tag("header_icon.png") %></a></li></div> 
      <div class="floatright"><li>Logged in as <i><%= @found_user.username %></i></li>
      <li><%= link_to "Favorites", favorites_path %></li>
      <li><%= link_to "About", about_path %></li>
      <li><%= link_to "Sign Out", logout_path, method: :delete %></li></div>
      </ul>
    </div>
  </nav>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <%= form_tag search_path, method: "get", id:"search-input", class:"controls" do %>
        <%= label_tag(:city, "City: ") %>
        <%= text_field_tag(:city) %>
        <%= label_tag(:state, "State: ") %>
        <%= text_field_tag(:state) %>
        <%= submit_tag("Search") %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-5">

      <div id="map-canvas"></div>
      <br>
      <div id="info-box">Current Neighborhood</div>  

      <p class="text-left"></p>
      
    </div>

    <div class="col-lg-2 center-block">
      <div class="btn-group">
        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Switch Neighborhoods</button>
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          <span class="caret"></span>
          <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu" id="hoods">
          <li role="presentation" class="dropdown-header">Search for a Hood first :)</li>
        </ul>
      </div>
    </div>

    <div class="col-lg-5">
      <div class="row">
       <div class="col-xs-12" id="info-table">
        <div class="row">
         <div class="col-xs-12" id="info1"></div>
         <div class="col-xs-12" id="info2"></div>
         <div class="col-xs-12" id="info3"></div>
         <div class="col-xs-12" id="info4"></div>
         <div class="col-xs-12" id="info5"></div>
         <div class="col-xs-12" id="info6"></div>
         <div class="col-xs-12" id="info7"></div>
         <div class="col-xs-12" id="info8"></div>
       </div>
       </div>
     </div>
   </div>

      <p class="text-left">
      <span class="glyphicon glyphicon-star-empty" id="fav" aria-hidden="true"></span>
      <span class="glyphicon glyphicon-star" aria-hidden="true"></span>

          <div class="text-left" id="city-summary"></div>
          <div class="text-left" id="people"></div>
          <div class="text-left" id="characteristics"></div>
          <div class="text-left" id="ages"></div>
          <div class="text-left" id="kids"></div>
          <div class="text-left" id="relationships"></div>
          <div class="text-left" id="charts"></div>
          <div class="text-left" id="weather"></div>

      </p>

    <p class="text-center"></p>

    </div>  
  </div>

</div>

</body>
</html>


